{
  "languageserver": {
    "haskell": {
      "command": "stack",
      "args": [
        "exec",
        "ghcide",
        "--",
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"]
    }
  }
}
